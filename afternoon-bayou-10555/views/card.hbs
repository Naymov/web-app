<div class="container">
	<section class="card-section">
		<h1 class="main__title">Корзина</h1>

		<div id="card">
			{{#if events.length}}
				<table>
					<thead>
					<tr>
						<th>Название</th>
						<th>Количество</th>
						<th>Действия</th>
					</tr>
					</thead>
					<tbody>

					{{#each events}}
						<tr>
							<td>{{title}}</td>
							<td>{{count}}</td>
							<td>
								<button
										class="btn #03a9f4 light-blue btm-small js-remove waves-effect waves-light"
										data-id="{{id}}"
										data-csrf="{{@root.csrf}}"
								>Удалить
								</button>
							</td>
						</tr>
					{{/each}}
					</tbody>
				</table>

				<p><strong>Цена:</strong> <span class="price">{{price}}</span></p>

				<form action="/orders" method="POST">
					<input type="hidden" name="_csrf" value="{{csrf}}">
					<button type="submit" class="btn #03a9f4 light-blue">Сделать заказ</button>
				</form>
			{{else}}
				<p>Корзина пуста</p>
			{{/if}}
		</div>
	</section>
</div>